{% extends 'about/layout.html.twig' %}
{% set pageName = "Objectif & vision" %}
{% block title %}
    {{pageName}}
{% endblock %}

{% block body %}

    {% embed "components/organisms/fullPage.html.twig" %}
        {% block content %}
            <section id="vision" class="container-fluid row justify-content-center my-3">
                <div class="col-6 text-center">
                    <img src={{asset('images/objective.png') | imagine_filter('big')}} alt={% trans %}"carte d'Afrique"{% endtrans %} class="img-responsive">
                </div>
                <div class="col-12 text-center">
                    <p class="display-5 font-monospace fw-bold">
                        <span class="text-success-800 d-block">{% trans %}Contribuer au{% endtrans %}</span>
                        <span class="text-primary d-block">{% trans %}Bien Vieillir{% endtrans %}</span>
                        <span class="text-success-800 d-block">{% trans %}en{% endtrans %}</span>
                        <span class="text-warning d-block">{% trans %}Afrique{% endtrans %}</span>
                    </p>
                </div>
            </section>

            {# section objectve #}
            {% embed "components/molecules/section.html.twig" %}
                {% block content %}
                    <div class="text-center">
                        {% include "components/atoms/homeTitle.html.twig" with {
                            content : "Notre objectif"
                        } %}
                    </div>

                    <div class="text-center">
                        <img src={{asset('images/vision.jpg') | imagine_filter('thumb')}} alt="Une personne heureuse qui lève le poing" class="img-responsive float-start pe-5">
                        <p class="fs-1 text-justify container-fluid">{% trans %}Faire de la plateforme
                            <span class="text-success-800 fst-italic fw-bold text-nowrap">
                                Maison Philo{% endtrans %}
                            </span>
                            {% trans %}un espace collaboratif incontournable qui reporte toute information ou proposition de services pouvant aider à améliorer la vie d'un Papy ou d'une Mamie en Afrique subsaharienne francophone.{% endtrans %}
                        </p>
                    </div>

                {% endblock %}
            {% endembed %}

        {% endblock %}
    {% endembed %}
{% endblock %}
