<div class="mt-5">
    {% block title %}
        <h4 class="my-3 display-5 fw-bold">{{title}}</h4>
        <p class="text-muted mx-auto display-5">{{content}}</p>
    {% endblock %}
    <figure class="p-3" data-aos="fade-down" data-aos-duration="3000">
        <a href={% block src %} {{ path(href) }} {% endblock %} {% block target %} {% endblock %} class="hover10">
            <img src={{asset('images/' ~ img) | imagine_filter('circle')}} alt={{title}} class="shadow rounded-circle bg-success border border-5 border-light">
            <figcaption class="position-absolute top-50 text-success-800 d-none" style="width:7em; height:3em; left:calc(100%/2 - 3.5em)"></figcaption>
        </a>
    </figure>
    <a href={{ path(href) }} class="btn btn-success">Cliquez ici</a>

</div>
