<div class="col-lg-4 text-center mb-5 btn-square gx-lg-5">
    <img src={{ asset('images/' ~ png) | imagine_filter('thumb') }} alt={{alt | trans}}>
    <p role="button" class="d-block fs-1 text-justify show{{index}} pe-auto">
        {{content}}
        <span id='show{{index}}' style='display:none'>
            {{hide}}
        </span>
        <span class='text-primary text-decoration-underline pe-auto  hide{{index}}'>
            <em class='d-block'>{% trans %}En savoir plus{% endtrans %}
                <i class='fa-solid fa-caret-down'></i>
            </em>
        {#     <em class='hide{{index}}' style='display:none'>
                <i class='fa-solid fa-caret-up'></i>
            </em> #}
        </span>
    </p>
</div>
