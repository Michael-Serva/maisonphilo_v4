<div class="card shadow bg-light fs-5" style="width: 18rem;" data-aos="fade-up" data-aos-duration="3000">
    <picture>
        <img class="img-fluid" src={{ asset("images/products/" ~ product.image) | imagine_filter('product') }} alt="Card image cap">
    </picture>
    <div class="card-body d-flex flex-column justify-content-end">
        <h2 class="card-text fs-3">{{product.name}}</h2>
        <p class="card-text">{{product.subtitle}}</p>
        <p class="card-text text-end">{{product.price | format_currency('CFA') }}</p>
        {% for item in product.category %}
            {{item}}
        {% endfor %}
    </div>
</div>
