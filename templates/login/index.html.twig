{# templates/login/index.html.twig #}
{% extends 'security/layout.html.twig' %}

{# ... #}
{% set page = "Connexion" %}
{% block title %}
    {{page}}
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <section id="top-page">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <section id="register" class="d-flex align-items-center justify-content-center">
            <div class="card p-3 rounded opacity-50 bg-light display-5" style="width: 75vw">
                <h1>{{page}}</h1>
                <form action="{{ path('app_login') }}" method="post">
                    <label for="username">Email:</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}"/>

                    <label for="password">Password:</label>
                    <input
                    type="password" id="password" name="_password"/>

                    {# If you want to control the URL the user is redirected to on success #}
                    <input type="hidden" name="_target_path" value="/admin"/>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <button type="submit">login</button>
                </form>

            </div>
        </section>
    </section>


{% endblock %}
