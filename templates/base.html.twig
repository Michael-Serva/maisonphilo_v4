<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>
        <link rel="icon" href={{ asset('svg/logo.svg') }}>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="container-fluid d-flex flex-column align-content-center" style="min-height:100vh; width:100%">

        {% block share %}

            <a href={{ path('app_contact_index') }} id="container" class="position-fixed top-50 end-0 d-lg-block d-none">
                <button class="learn-more">
                    <span class="circle" aria-hidden="true">
                        <span class="icon arrow"></span>
                    </span>
                    <span class="button-text">Partagez vos informations</span>
                </button>
            </a>
            {# float button mobile #}
            <a href={{ path('app_contact_index') }} class="position-fixed top-50 end-0 me-5 fs-1 btn btn-success rounded rounded-circle d-lg-none d-md-block js-share">
                <i class="fa-brands fa-slideshare"></i>
            </a>

        {% endblock %}

        {% block login %}
            {% if app.user is  null %}

            <div class="d-flex login-button justify-content-evenly d-lg-none"> 
                {% include "components/atoms/loginButton.html.twig" with {
                    class: "js-login-button",
                    font: "right-to-bracket",
                    content: "Connexion",
                    href: "app_register"
                } %}

                {% include "components/atoms/loginButton.html.twig" with {
                    class: "js-login-button",
                    font: "user-plus",
                    content: "Inscription",
                    href: "app_login"
                } %}
 
                <a id="js-login-button" href="#" class="text-center">
                    <i class="fa-solid fa-fingerprint bg-light text-warning display-1 rounded-circle p-3"></i>
                </a>
            </div>

               

                {# <a href="#" class="login-button index">
                    <i class="fa-solid fa-fingerprint bg-light text-warning display-1 rounded-circle p-3"></i>
                </a>
                <a href="#" class="login-button register">
                    <i class="fa-solid fa-user bg-light text-warning display-1 rounded-circle p-3"></i>
                </a>
                  <a href="#" class="login-button login">
                    <i class="fa-solid fa-right-to-bracket bg-light text-warning display-1 rounded-circle p-3"></i>
                </a> #}
                
                              
            {% endif %}

        {% endblock %}

        {% block header %}{% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
            {% include "components/organisms/footer.html.twig" %}
        {% endblock %}
    </body>
</html>
