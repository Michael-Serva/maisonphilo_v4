{% block body %}
    <div data-spy="scroll" data-target="#mainNav" data-offset="0" class="text-monospace">
        {% include "components/organisms/homeNavbar.html.twig" %}
        {# top-page #}
        <section id="top-page" class="d-flex justify-content-center align-items-center flex-column" data-aos="fade-up" data-aos-duration="3000">
            <p class="display-1 text-monospace fw-bold text-light text-center">
                <span class="js-title"></span>
            </p>
            <div class="display-5 mt-3 text-center fw-bold text-title">
                Votre plateforme de partage d'information et de services concernant les personnes âgées en Afrique subsaharienne francophone</div>
            <a href="#services" class="btn btn-success mt-5 text-uppercase fs-1">En savoir plus</a>
        </section>
        {# services #}
        <section id="services" class="d-flex align-items-center text-center" data-aos="fade-up" data-aos-duration="3000">
            <div class="container-fluid row justify-content-center">
                {% include "components/atoms/homeTitle.html.twig" with {
                    content : "Services"
                } %}

                {% include "components/atoms/fontCircle.html.twig" with {
                    title : "Partage d'information",
                    content : "Vous cherchez une information pouvant aider au bien-être de nos aînés ?
                    Vous disposez d'information pas encore publiée sur ce site ?
                    Bienvenue sur cet espace collaboratif !
                    ",
                    font :  "fa-solid fa-share-nodes",      
                    path_link : "app_assistance_share"

                } %}

                {% include "components/atoms/fontCircle.html.twig" with {
                       title : "Petites annonces",
                       content : "Vous cherchez un service dédié à une personne âgée ? Vous offrez des services à destination de nos séniors ? Alors, cet espace est fait pour vous !",
                       font : "fa-solid fa-laptop",
                       path_link : "app_assistance_share"
                   } %}

                {% include "components/atoms/fontCircle.html.twig" with {
                       title : "Actions sociales",
                       content : "Venez retrouver nos ONG partenaires ainsi que les actions sociales dédiées à nos parents âgés que nous soutenons.",
                       font : "fa-solid fa-hand-holding-heart",
                       path_link : "app_assistance_share"
                   } %}

            </div>
        </section>
        {# vision #}
        <section id="vision" class="bg-warning-200 d-flex align-items-center" data-aos="fade-up" data-aos-duration="3000">
            <div class="row justify-content-center container-fluid">
