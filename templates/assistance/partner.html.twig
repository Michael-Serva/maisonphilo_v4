{% extends "assistance/layout.html.twig" %}
{% set pageName = "Annuaire des associations" %}
{% block title %}
    {{pageName}}
{% endblock %}

{% block body %}
    {% embed "components/organisms/fullPage.html.twig" %}
        {% block content %}
            {% embed "components/molecules/section.html.twig" %}
                {% block content %}

                    {% for country in countries %}
                        {% include "components/atoms/btnOutlineShare.html.twig" with {
                            content: country.name | country_name
                        } %}
                        <div class="showDescription">
                            {% for partner in partners %}
                                {% if partner.country == country %}
                                
                                    {% include "components/molecules/partnerDescription.html.twig" with {
                                        name: partner.name,
                                        activity: partner.activity,
                                        type: partner.type,
                                        description: partner.description,
                                        phoneNumber: partner.phoneNumber,
                                        email: partner.email,
                                        contact: partner.contact
                                    } %}
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endfor %}
                {% endblock %}
            {% endembed %}
        {% endblock %}
    {% endembed %}
{% endblock %}
