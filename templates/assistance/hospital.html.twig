{% extends "assistance/layout.html.twig" %}
{% set pageName = "Hospital" %}
{% block title %}
    {{pageName}}
{% endblock %}

{% block body %}
    {% embed "components/organisms/fullPage.html.twig" %}
        {% block content %}
            {% embed "components/molecules/section.html.twig" %}
                {% block content %}
                    {% for country in countries %}
                        {% include "components/atoms/btnOutlineShare.html.twig" with {
                            content: country.name | country_name,
                            id: "hospital"
                        } %}
                            {% for partner in hospitals %}
                                    {% include "components/molecules/hospitalDescription.html.twig" with {
                                        title: partner.name,
                                        subTitle: partner.subtitle,
                                        description: partner.content,
                                        phoneNumber: partner.phoneNumber,
                                        email: partner.email
                                    } %}

                            {% endfor %}

                    {% endfor %}
                {% endblock %}
            {% endembed %}
        {% endblock %}
    {% endembed %}
{% endblock %}
